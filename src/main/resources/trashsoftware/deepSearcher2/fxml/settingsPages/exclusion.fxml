<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<fx:root type="trashsoftware.deepSearcher2.controllers.settingsPages.ExclusionPage" xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets top="5" left="5" right="5" bottom="5"/>
    </padding>

    <HBox alignment="CENTER" spacing="10">
        <Separator prefWidth="80"/>
        <Label text="%exclusions"/>
        <Separator prefWidth="80"/>
    </HBox>

    <GridPane vgap="5" hgap="5">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS"/>
            <ColumnConstraints/>
        </columnConstraints>
        <rowConstraints>

        </rowConstraints>

        <Label text="%excludedDirs"/>
        <ListView fx:id="excludedDirList" prefHeight="150" GridPane.rowIndex="1"/>
        <VBox spacing="5" GridPane.rowIndex="1" GridPane.columnIndex="1">
            <Button text="+" onAction="#addExcludedDir" minWidth="25"/>
            <Button fx:id="deleteDirButton" text="-" onAction="#deleteExcludedDir" minWidth="25" disable="true"/>
        </VBox>

        <Label text="%excludedFormats" GridPane.rowIndex="2"/>
        <ListView fx:id="excludedFormatList" prefHeight="150" GridPane.rowIndex="3"/>
        <VBox spacing="5" GridPane.rowIndex="3" GridPane.columnIndex="1">
            <Button text="+" onAction="#addExcludedFormat" minWidth="25"/>
            <Button fx:id="deleteFormatButton" text="-" onAction="#deleteExcludedFormat" minWidth="25" disable="true"/>
        </VBox>
    </GridPane>

</fx:root>
