<?xml version="1.0" encoding="UTF-8"?>

<?import trashsoftware.deepSearcher2.controllers.settingsPages.CustomPage?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<fx:root xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         type="trashsoftware.deepSearcher2.controllers.settingsPages.CustomPage">
    <padding>
        <Insets top="5.0" left="5.0" right="5.0" bottom="5.0"/>
    </padding>

    <HBox alignment="CENTER" spacing="10.0">
        <Separator prefWidth="100.0"/>
        <Label text="%custom"/>
        <Separator prefWidth="100.0"/>
    </HBox>

    <GridPane vgap="5.0" hgap="5.0">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS"/>
            <ColumnConstraints/>
        </columnConstraints>

        <HBox spacing="5.0">
            <Label text="%customTextFormats"/>
            <Label text="%onlyTextFormat"/>
        </HBox>
        <TableView fx:id="customFmtTable" prefHeight="380.0" GridPane.rowIndex="1">
            <columns>
                <TableColumn text="%fmtDescription" prefWidth="200.0"/>
                <TableColumn text="%fmtExtName" prefWidth="140.0"/>
            </columns>
            <placeholder>
                <Label text="%customFmtTablePlaceHolder"/>
            </placeholder>
        </TableView>
        <VBox spacing="5.0" GridPane.rowIndex="1" GridPane.columnIndex="1">
            <Button text="+" onAction="#addFmt" minWidth="25.0"/>
            <Button fx:id="deleteFmtButton" text="-" onAction="#deleteFmt" minWidth="25.0" disable="true"/>
        </VBox>
    </GridPane>

</fx:root>
