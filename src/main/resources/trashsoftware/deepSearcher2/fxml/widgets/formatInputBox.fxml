<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="trashsoftware.deepSearcher2.controllers.widgets.FormatInputBox"
      prefWidth="250.0" alignment="CENTER" spacing="10">
    <padding>
        <Insets left="10" right="10" top="10" bottom="10"/>
    </padding>

    <HBox spacing="10" alignment="CENTER">
        <Label text="%extension"/>
        <TextField fx:id="textField" HBox.hgrow="ALWAYS"/>
    </HBox>
    <HBox spacing="5" alignment="CENTER_RIGHT">
        <Button text="%ok" onAction="#okAction"/>
        <Button text="%cancel" onAction="#cancelAction"/>
    </HBox>

</VBox>
